{
  "name": "use.gpu",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@webgpu/types": "^0.1.7",    
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.5.1",
    "eslint": "^7.5.0",
    "jest": "^27.2.0",
    "lerna": "^4.0.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.4 .4",
    "webpack": "^5.10.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version"
  ],
  "scripts": {
    "build": "yarn lerna run build; node scripts/to-index-js.mjs",
    "start": "NODE_ENV=development webpack serve",
    "test": "jest --watch",
    "lint": "eslint packages/**/src --ext ts",
    "types": "yarn lerna run types",
    "coverage": "yarn lerna run coverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "\\.jsx?$": "babel-jest",
      "\\.glsl$": "<rootDir>/test/fileTransformer.mjs"
    },
    "moduleNameMapper": {
      "^@use-gpu/(.*)$": "<rootDir>/packages/$1"
    },
    "modulePaths": [
      "<rootDir>/src"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "setupFiles": [
      "./test/setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "glsl"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "workspaces": [
    "packages/glsl",
    "packages/live",
    "packages/core",
    "packages/shader",
    "packages/webgpu",
    "packages/components",
    "packages/inspect",
    "packages/app"
  ]
}
