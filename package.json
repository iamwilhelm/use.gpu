{
  "name": "use.gpu",
  "version": "0.4.0",
  "main": "index.js",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@types/lodash": "^4.14.176",
    "@types/lru-cache": "^5.1.1",
    "@types/jest": "^26.0.19",
    "@types/webpack": "^5.10.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@wasm-tool/wasm-pack-plugin": "^1.6.0",
    "@webgpu/types": "^0.1.9",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.0.0",
    "eslint": "^7.5.0",
    "jest": "^27.2.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.0-dev.20220506",
    "webpack": "5.10.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "wsrun": "^5.2.4"
  },
  "browserslist": [
    "last 1 chrome version",
    "last 1 firefox version"
  ],
  "scripts": {
    "build": "yarn wsrun --serial run build && yarn run pkg && yarn run test:import",
    "pkg": "ts-node scripts/package-json.ts",
    "publish": "yarn run build && yarn publish --ignore-scripts build/packages/shader --access public && yarn publish --ignore-scripts --access public build/packages/glsl-loader && yarn publish --ignore-scripts --access public build/packages/wgsl-loader",
    "start": "NODE_ENV=development ts-node node_modules/.bin/webpack serve",
    "test": "jest --watch",
    "test:import": "(cd test/import; yarn run test)",
    "lint": "eslint packages/**/src --ext ts",
    "types": "yarn wsrun run types",
    "coverage": "yarn wsrun run coverage",
    "postinstall": "(cd packages/wgsl; yarn run build)"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "\\.jsx?$": "babel-jest",
      "\\.(wgsl|glsl)$": "<rootDir>/test/fileTransformer.mjs"
    },
    "moduleNameMapper": {
      "^@use-gpu/wgsl/(.*)$": "<rootDir>/packages/wgsl/src/$1",
      "^@use-gpu/(.*)$": "<rootDir>/packages/$1"
    },
    "modulePaths": [
      "<rootDir>/src"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build"
    ],
    "setupFiles": [
      "./test/setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "glsl",
      "wgsl"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "workspaces": [
    "packages/state",
    "packages/wgsl",
    "packages/live",
    "packages/core",
    "packages/shader",
    "packages/glsl-loader",
    "packages/wgsl-loader",
    "packages/webgpu",
    "packages/react",
    "packages/text",
    "packages/components",
    "packages/gltf",
    "packages/inspect",
    "packages/app"
  ]
}
