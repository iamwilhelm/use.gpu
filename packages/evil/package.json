{
  "name": "@use-gpu/evil",
  "version": "0.0.1",
  "main": "src/index.js",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "typesVersions": {
    "*": {
      "types": [
        "src/types"
      ]
    }
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "jest --collect-coverage",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",
    "build": "yarn run build:types && yarn run build:js && yarn run build:pkg",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir ../../build/packages/evil/src --extensions \".ts\" --source-maps inline",
    "build:pkg": "cp package.json ../../build/packages/evil"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "debug.ts"
    ]
  },
  "dependencies": {
    "@use-gpu/babel-parser": "*",
    "@typescript-eslint/typescript-estree": "^4.28.0",
    "commander": "^7.2.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
