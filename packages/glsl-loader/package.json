{
  "name": "@use-gpu/glsl-loader",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@use-gpu/shader": "*",
    "require-hacker": "^3.0.1"
  },
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",
    "build": "yarn run build:types && yarn run build:js && yarn run build:pkg",
    "build:types": "rm tsconfig.tsbuildinfo; tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir ../../build/packages/glsl-loader/src --extensions \".ts\" --ignore \"src/**/__mocks__/**/*.js\" --ignore \"src/**/*.test.ts\"; babel node.ts --out-dir ../../build/packages/glsl-loader --extensions \".ts\"",
    "build:pkg": "cp package.json ../../build/packages/glsl-loader"
  },
  "devDependencies": {
    "@types/loader-utils": "^2.0.3",
    "@types/lodash": "^4.14.176",
    "@types/require-hacker": "^3.0.1"
  }
}
