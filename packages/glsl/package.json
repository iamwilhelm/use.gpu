{
  "name": "@use-gpu/glsl",
  "version": "0.0.1",
  "main": "src/index.js",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "typesVersions": {
    "*": {
      "types": [
        "index"
      ]
    }
  },
  "exports": {
    ".": "./src/index.js",
    "./types": "./src/index.js"
  },
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",
    "build": "yarn run build:glsl && yarn run build:types && yarn run build:js && yarn run build:pkg",
    "build:glsl": "node build.mjs",
    "build:types": "rm tsconfig.tsbuildinfo; tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir ../../build/packages/glsl/src --extensions \".ts\" --source-maps inline",
    "build:pkg": "cp package.json ../../build/packages/glsl"
  },
  "dependencies": {
    "glob": "^7.2.0"
  }
}
