{
  "name": "@use-gpu/glsl",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",
    "build": "yarn run build:glsl && yarn run build:js && yarn run build:pkg",
    "build:glsl": "node build.mjs",
    "build:js": "babel src --out-dir ../../build/packages/glsl/src --extensions \".ts,.js\" --source-maps inline",
    "build:pkg": "cp package.json ../../build/packages/glsl"
  },
  "devDependencies": {
    "glob": "^7.2.0"
  }
}
