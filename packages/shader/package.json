{
  "name": "@use-gpu/shader",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./glsl": "./src/glsl/index.ts",
    "./glsl/types": "./src/glsl/types.ts"
  },
  "dependencies": {
    "@lezer/common": "^0.15.11",
    "@lezer/generator": "^0.15.4",
    "@lezer/lr": "^0.15.7",
    "lru-cache": "^6.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.176",
    "@types/lru-cache": "^5.1.1"
  },
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",
    "build": "yarn run build:grammar && yarn run build:js && yarn run build:types && yarn run build:pkg",
    "build:grammar": "yarn run build:grammar:glsl && yarn run build:grammar:wgsl",
    "build:grammar:glsl": "yarn run lezer-generator src/glsl/grammar/glsl.grammar -o src/glsl/grammar/glsl.js",
    "build:grammar:wgsl": "yarn run lezer-generator src/wgsl/grammar/wgsl.grammar -o src/wgsl/grammar/wgsl.js",
    "build:types": "rm tsconfig.tsbuildinfo; tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir ../../build/packages/shader/src --extensions \".ts,.js\" --ignore \"src/**/__mocks__/**/*.js\" --ignore \"src/**/*.test.ts\"; babel glsl.ts --out-dir ../../build/packages/shader --extensions \".ts\"",
    "build:pkg": "cp README.md package.json ../../build/packages/shader"
  }
}
