{
  "name": "@use-gpu/text",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",

    "build": "yarn run build:wasm && yarn run build:js && yarn run build:types && yarn run build:pkg",
    "build:types": "rm tsconfig.tsbuildinfo; tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir ../../build/packages/text/src --extensions \".ts\" --ignore \"src/**/__mocks__/**/*.js\" --ignore \"src/**/*.test.ts\"",
    "build:pkg": "cp package.json ../../build/packages/text",
    "build:wasm": "cd ../../rust/use-gpu-text; wasm-pack build; cp -r pkg ../../build/packages/text/"
  }
}
