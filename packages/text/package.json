{
  "name": "@use-gpu/text",
  "version": "0.5.0",
  "main": "src/index.ts",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts"
  },
  "dependencies": {
    "@use-gpu/state": "*"
  },
  "private": true,
  "scripts": {
    "build": "yarn run build:wasm && yarn run build:js && yarn run build:pkg",
    "build:js": "NPM_PACKAGE=text ../../scripts/build-mjs-umd.sh",
    "build:wasm": "rm -rf pkg; cd ../../rust/use-gpu-text; wasm-pack build; cp -r pkg ../../packages/text/pkg/",
    "build:pkg": "cp -r pkg ../../build/packages/text/",
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch"
  },
  "keywords": [
    "use-gpu",
    "use-gpu-library"
  ]
}