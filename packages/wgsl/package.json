{
  "name": "@use-gpu/wgsl",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Steven Wittens <steven@acko.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src --ext ts",
    "coverage": "echo 'jest --collect-coverage' disabled",
    "types": "tsc --noEmit",
    "types:watch": "yarn run types -- --watch",
    "build": "yarn run build:wgsl && yarn run build:js && yarn run build:pkg",
    "build:wgsl": "ts-node build",
    "build:js": "babel src --out-dir ../../build/packages/wgsl/src --extensions \".ts,.js\"",
    "build:pkg": "cp package.json ../../build/packages/wgsl"
  },
  "devDependencies": {
    "glob": "^7.2.0"
  },
  "exports": {
    ".": "./src/index.ts",
    "./fragment/pbr.wgsl": {
      "types": "./src/fragment/pbr.d.ts",
      "import": "./src/fragment/pbr.wgsl",
      "require": "./src/fragment/pbr.wgsl"
    },
    "./instance/draw/mesh.wgsl": {
      "types": "./src/instance/draw/mesh.d.ts",
      "import": "./src/instance/draw/mesh.wgsl",
      "require": "./src/instance/draw/mesh.wgsl"
    },
    "./instance/fragment/mesh.wgsl": {
      "types": "./src/instance/fragment/mesh.d.ts",
      "import": "./src/instance/fragment/mesh.wgsl",
      "require": "./src/instance/fragment/mesh.wgsl"
    }
  }
}