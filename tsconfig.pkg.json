{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "nodenext",
    "lib": ["es2022", "dom"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "./",
    "isolatedModules": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {},
    "rootDirs": [],
    "types": ["@webgpu/types", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": false,
    "typeRoots": [
       "./node_modules/@types",
       "./node_modules",
    ],
    "traceResolution": false,
  },
  "exclude": [
    "babel.config.*",
    "*/coverage/*",
    "**/*.test.ts",
    "node_modules",
    "build",
  ]
}
